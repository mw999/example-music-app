{
  "name": "api",
  "description": "Music API using Node, graphql and apollo.",
  "version": "1.0.0",
  "private": true,
  "author": "Matthew Williams <mw999@hotmail.co.uk>",
  "license": "ISC",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "db:migrate": "knex migrate:latest --knexfile ./build/db/knexfile.js",
    "db:seed": "npx knex seed:run --knexfile ./build/db/knexfile.js",
    "test": "jest src --watch",
    "test:ci": "npm run test:setup-db && jest src --silent --bail --ci",
    "test:setup-db": "NODE_ENV='test' node ./jest/jest.migrate.js"
  },
  "dependencies": {
    "apollo-server": "^3.7.0",
    "dayjs": "^1.11.2",
    "dotenv": "^16.0.0",
    "faker": "^5.5.3",
    "graphql": "^16.4.0",
    "knex": "^2.0.0",
    "mysql2": "^2.3.3",
    "objection": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  }
}
